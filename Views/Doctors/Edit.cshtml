@model HospitalDataBase.Models.Doctors

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Doctor - @Model.FirstName @Model.LastName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <!-- Upload or change the picture -->
            <div class="form-group">
                <label class="control-label">
                    @if (string.IsNullOrEmpty(Model.ImagePath))
                    {
                        @:Upload Picture
                    }
                    else
                    {
                        @:Change Picture
                    }
                </label>
                <input type="file" name="DoctorImage" class="form-control-file" />
                <div>
                    <small class="text-muted">Accepted formats: .jpg, .png, .jpeg</small>
                </div>
            </div>

            <!-- Display the picture if it exists -->
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="form-group">
                    <img src="@Model.ImagePath" alt="Doctor Picture" class="img-thumbnail" width="150" />
                </div>
            }

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="control-label"></label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AboutInfo" class="control-label"></label>
                <textarea asp-for="AboutInfo" class="form-control" rows="5"></textarea>
                <span asp-validation-for="AboutInfo" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
